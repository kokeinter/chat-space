.main-msgs__box
  .main-msgs__user-name
    = message.user.name
  .main-msgs__msg-time 
    = message.created_at.strftime("%Y/%m/%d %H:%M")
  .main-msgs__a-msg 
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'main-msgs__a-msg__image' if message.image.present?